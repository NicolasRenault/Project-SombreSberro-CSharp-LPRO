<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SombreSberro.View.PatientView"
             Appearing="ContentPagePatient_Appearing">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Label x:Name="labelPrenomFP"
                            Text="{Binding nom}"
                            Grid.Column="1"
                            Grid.Row="0"
                            FontAttributes="Bold"/>

                <Label x:Name="labelNomFP"
                        Text="{Binding prenom}"
                            Grid.Column="2"
                            Grid.Row="0"/>

                <Label x:Name="labelDateDeNaissanceFP"
                       Text="{Binding dateNaissance}"
                        Grid.Column="1"
                        Grid.Row="1"/>
            </Grid>
            <Label Text="Liste des antecedents"/>
            <ListView x:Name="listAtcd">

            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
